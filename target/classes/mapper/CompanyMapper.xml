<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fusionskye.learning_deom.mapper.ds2.CompanyMapper">
    <insert id="insert" parameterType="com.fusionskye.learning_deom.po.Company" useGeneratedKeys="true" keyProperty="id">
        insert into t_company (company_name, company_address)
        values (#{companyName}, #{companyAddress})
    </insert>
    <insert id="batchInsert">
        insert into t_company (id,company_name,company_address)
        values
        <foreach collection="list" item="item" index="index" separator=",">
            (null,#{item.companyName},#{item.companyAddress})
        </foreach>
    </insert>

    <select id="selectAll" resultType="com.fusionskye.learning_deom.po.Company">
        select company_name companyName, company_address companyAddress, id
        from t_company
    </select>

</mapper>
